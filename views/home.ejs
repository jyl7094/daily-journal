<%- include('partials/header'); %>
    <h1>Home</h1>
    <p><%= homeStartingContent %></p>
    <% posts.forEach((post) => { %>
        <h1><%= post.title %></h1>
        <% if (post.post.length > 100) { %>
            <p>
                <%= post.post.substring(0, 100) + '. . .' %>
                <a class="readmore" href="/posts/<%= post._id %>">Read More</a>
            </p>
        <% } else { %>
            <%= post.post %>
        <% } %>
    <% }); %>
<%- include('partials/footer'); %>
